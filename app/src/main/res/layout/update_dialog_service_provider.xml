<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/address2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter a new address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/phone2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address2"
        android:layout_alignStart="@+id/address2"
        android:ems="10"
        android:hint="Enter a new phone "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/companyName2"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone2"
        android:layout_alignStart="@+id/address2"
        android:ems="10"
        android:hint="Enter a new comapny name "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/generalDescription2"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companyName2"
        android:layout_alignStart="@+id/address2"
        android:ems="10"
        android:hint="Enter a new General Description"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/update"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/address2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="Update" />
</RelativeLayout>